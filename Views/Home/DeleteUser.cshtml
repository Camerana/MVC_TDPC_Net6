@{
    ViewData["Title"] = "Delete User";
}
@using System.Collections.Generic;
@model List<UserModel>;
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="display-4">Test Javascript Post User</h3>
            ID: <input type="text" id="userID" />
            <button class="btn btn-primary" onclick="deleteUser()">Delete User</button>
        </div>
    </div>
    @{
        <table>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].FirstName</td>
                    <td>@Model[i].LastName</td>
                    <td><button class="btn-sm btn-danger" onclick="deleteUserById('@Model[i].ID')">Delete</button></td>
                </tr>
            }
        </table>
    }
</div>