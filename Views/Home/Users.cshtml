@{
    ViewData["Title"] = "Users";
}
@model List<UserModel>;
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-12">
            <button class="btn btn-primary" onclick="insertUser()">Insert User</button>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table>
                <thead>
                    <tr>
                        <td>First Name</td>
                        <td>Last Name</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody id="TBLUsersBody">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].FirstName</td>
                            <td>@Model[i].LastName</td>
                            <td><button class="btn-sm btn-warning" onclick="updateUserById('@Model[i].ID', '@Model[i].FirstName', '@Model[i].LastName')">Update</button></td>
                            <td><button class="btn-sm btn-danger" onclick="deleteUserById('@Model[i].ID')">Delete</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>